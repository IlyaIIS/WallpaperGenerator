<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/main_background"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/main_bg">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.github.furkankaplan.fkblurview.FKBlurView
            android:id="@+id/fkBlurView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="20dp"
            android:background="#11FFFFFF"
            android:orientation="horizontal">

            <Button
                android:id="@+id/toCollectionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:layout_marginStart="15dp"
                android:background="@drawable/base_button"
                android:text="@string/menu_gallery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/jura_bold"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/loginButton"
                android:background="@drawable/action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:text="@string/login"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@id/fkBlurView"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/jura_bold"
                android:textSize="18sp"/>
        </com.github.furkankaplan.fkblurview.FKBlurView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="130dp"
            android:padding="10dp"
            android:backgroundTint="@color/transparent">
            <com.github.furkankaplan.fkblurview.FKBlurView
                android:id="@+id/fkBlurViewMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="20dp"
                android:background="#11E9E9E9"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="40dp"
                    android:paddingVertical="60dp"
                    android:layout_marginTop="100dp">

                    <Button
                        android:id="@+id/generationButtonGradients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/base_button"
                        android:text="@string/generator_gradients"
                        android:fontFamily="@font/jura_bold"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/generationButtonShapes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/base_button"
                        android:layout_marginTop="20dp"
                        android:text="@string/generator_shapes"
                        android:fontFamily="@font/jura_bold"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/generationButtonInterference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/base_button"
                        android:layout_marginTop="20dp"
                        android:text="@string/generator_interference"
                        android:fontFamily="@font/jura_bold"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/generationButtonFractals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/base_button"
                        android:layout_marginTop="20dp"
                        android:text="@string/generator_fractals"
                        android:fontFamily="@font/jura_bold"
                        android:textSize="18sp"/>
                </LinearLayout>
            </com.github.furkankaplan.fkblurview.FKBlurView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>