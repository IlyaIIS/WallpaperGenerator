<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthorizationFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <Button
        android:id="@+id/to_back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/transparent"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="(-" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:gravity="center">

        <EditText
            android:id="@+id/authEditTextTextUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Имя" />

        <EditText
            android:id="@+id/authEditTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Пароль"/>

        <TextView
            android:id="@+id/authErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#AF4F4F"
            android:text=""/>

        <Button
            android:id="@+id/authorizationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Войти"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/to_registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать новый аккаунт"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
</LinearLayout>