<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <gradient android:angle="-90" android:startColor="#8E759E" android:endColor="#896D9A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <solid android:color="#8F749F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <gradient android:angle="-90" android:startColor="#967CA6" android:endColor="#9977AE" />
        </shape>
    </item>
</selector>